{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "paths": {
            "@/modules/*": ["modules/*"],
            "@/utils/*": ["utils/*"],
            "@/middleware/*": ["middleware/*"]
        }
    },
    "include": ["src/**/*"]
}
